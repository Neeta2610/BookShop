{{> partials/menu}}
<main role="main" class="ml-sm-auto col-lg-10 px-4">
	<div class="col-12">
		<div class="page-header">
			<div class="float-right">
				<button type="submit" id="btnPincodeUpdate" class="btn btn-outline-info">{{ @root.__ "Update" }}</button>
			</div>
			<h2>{{ @root.__ "New Pincode" }}</h2>
		</div>
		<form id="pincodeEditForm" data-toggle="validator" autocomplete="off" >
			<div class="form-group">
				<label>{{ @root.__ "Pincode" }} *</label>
				<input type="text" class="form-control" id="pincode" value="{{pincode.pincode}}" required>
			</div>
			<div class="form-group">
				<label>{{ @root.__ "Delivery Charge" }} *</label>
				<input type="text" class="form-control" id="delivery_charge" value="{{pincode.delivery_charge}}" required>
			</div>
            <div id="_id">{{pincode._id}}</div>
		</form>
	</div>
</main>